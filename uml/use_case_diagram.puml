@startuml use_case_diagram
left to right direction
skinparam packageStyle rectangle

actor "Adopter" as adopter
actor "Shelter Admin" as admin

rectangle "PawFect Match System" {
  usecase "Register Account\n(US#1)" as UC1
  usecase "Login\n(US#2)" as UC2
  usecase "View Dashboard\n(US#3)" as UC3
  usecase "Add New Pet\n(US#4)" as UC4
  usecase "Update Pet Status\n(US#5)" as UC5
  usecase "Remove Pet Listing\n(US#6)" as UC6
}

' Both actors can register and login
adopter --> UC1
adopter --> UC2
admin --> UC1
admin --> UC2

' Adopter can view their dashboard
adopter --> UC3

' Admin can view dashboard and manage pets
admin --> UC3
admin --> UC4
admin --> UC5
admin --> UC6

' Relationships
UC3 ..> UC2 : <<include>>
UC4 ..> UC2 : <<include>>
UC5 ..> UC2 : <<include>>
UC6 ..> UC2 : <<include>>

@enduml
