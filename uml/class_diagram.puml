@startuml class_diagram
title Model Classes - Class Diagram

class User {
  - id : Integer
  - username : String
  - email : String
  - password_hash : String
  - is_admin : Boolean
  --
  + set_password(password : String) : void
  + check_password(password : String) : Boolean
}

class Pet {
  - id : Integer
  - name : String
  - species : String
  - breed : String
  - age : Integer
  - description : Text
  - status : String
  - created_at : DateTime
  - shelter_id : Integer
  --
  + update_status(new_status : String) : void
}

class Appointment {
  - id : Integer
  - pet_id : Integer
  - adopter_id : Integer
  - meeting_datetime : DateTime
  - status : String
  - notes : Text
  --
  + cancel() : void
  + confirm() : void
}

